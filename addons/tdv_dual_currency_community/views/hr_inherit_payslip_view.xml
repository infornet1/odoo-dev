<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="hr_payslip_especial_days_form" model="ir.ui.view">
            <field name="name">hr.payslip.holidays</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll_community.hr_payslip_view_form"/>
            <field name="arch" type="xml">
                <!-- Añadir campo "mondays" -->
                <xpath expr="//field[@name='struct_id']" position="after">
                    <field name="mondays" string="Número de Lunes"/>
                    <field name="mondays_month" string="Lunes del Mes"/>
                    <field name="conversion_currency_id" string="Moneda de Conversión"/>
                    <field name="exchange_rate" string="Tasa de Cambio" widget="monetary" options="{'currency_field': 'conversion_currency_id'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>