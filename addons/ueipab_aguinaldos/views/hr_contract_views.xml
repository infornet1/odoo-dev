<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_contract_view_form_inherit_aguinaldos" model="ir.ui.view">
        <field name="name">hr.contract.form.inherit.aguinaldos</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <!-- Add fields after the wage field -->
            <field name="wage" position="after">
                <field name="ueipab_monthly_salary"
                       attrs="{'invisible': [('struct_id', '=', False)]}"/>
                <field name="ueipab_salary_notes"
                       attrs="{'invisible': [('ueipab_monthly_salary', '=', False)]}"
                       readonly="1"/>
            </field>
        </field>
    </record>
</odoo>
