<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- AR-I Reject Wizard Form -->
    <record id="view_ari_reject_wizard_form" model="ir.ui.view">
        <field name="name">ari.reject.wizard.form</field>
        <field name="model">ari.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject AR-I Declaration">
                <group>
                    <field name="ari_id" readonly="1"/>
                    <field name="rejection_reason" placeholder="Enter the reason for rejection..."/>
                </group>
                <footer>
                    <button name="action_confirm_reject" string="Confirm Rejection"
                            type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
