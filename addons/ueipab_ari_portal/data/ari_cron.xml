<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- AR-I Sequence -->
    <record id="seq_hr_employee_ari" model="ir.sequence">
        <field name="name">AR-I Declaration Sequence</field>
        <field name="code">hr.employee.ari</field>
        <field name="prefix">ARI/%(year)s/</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Cron Job: AR-I Deadline Reminder -->
    <record id="ir_cron_ari_deadline_reminder" model="ir.cron">
        <field name="name">AR-I: Deadline Reminder</field>
        <field name="model_id" ref="model_hr_employee_ari"/>
        <field name="state">code</field>
        <field name="code">model._cron_deadline_reminder()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="doall">False</field>
    </record>

</odoo>
