<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================
         Payroll Disbursement Detail Wizard View
         ======================================== -->

    <record id="payroll_disbursement_wizard_view_form" model="ir.ui.view">
        <field name="name">payroll.disbursement.wizard.form</field>
        <field name="model">payroll.disbursement.wizard</field>
        <field name="arch" type="xml">
            <form string="Payroll Disbursement Detail Report">
                <group>
                    <group string="Filter Selection">
                        <field name="filter_type" widget="radio"/>
                        <field name="batch_id"
                               invisible="filter_type != 'batch'"
                               required="filter_type == 'batch'"
                               options="{'no_create': True, 'no_open': True}"/>
                        <field name="date_from"
                               invisible="filter_type != 'date_range'"
                               required="filter_type == 'date_range'"/>
                        <field name="date_to"
                               invisible="filter_type != 'date_range'"
                               required="filter_type == 'date_range'"/>
                    </group>
                    <group string="Additional Filters">
                        <field name="department_ids"
                               widget="many2many_tags"
                               options="{'no_create': True}"/>
                        <field name="employee_ids"
                               widget="many2many_tags"
                               options="{'no_create': True}"/>
                    </group>
                </group>

                <group>
                    <group>
                        <label for="payslip_count"/>
                        <div class="o_row">
                            <field name="payslip_count" class="oe_inline"/>
                            <span class="text-muted"> payslip(s) found</span>
                        </div>
                    </group>
                </group>

                <footer>
                    <button name="action_print_report"
                            string="Print Report"
                            type="object"
                            class="btn-primary"
                            icon="fa-print"/>
                    <button name="action_preview"
                            string="Preview Payslips"
                            type="object"
                            class="btn-secondary"
                            icon="fa-eye"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_payroll_disbursement_wizard" model="ir.actions.act_window">
        <field name="name">Payroll Disbursement Detail</field>
        <field name="res_model">payroll.disbursement.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="payroll_disbursement_wizard_view_form"/>
    </record>

</odoo>
