<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Payslip Compact Report Wizard Form View -->
    <record id="view_payslip_compact_wizard_form" model="ir.ui.view">
        <field name="name">payslip.compact.wizard.form</field>
        <field name="model">payslip.compact.wizard</field>
        <field name="arch" type="xml">
            <form string="Comprobante de Pago (Compacto)">
                <div class="alert alert-info" role="alert">
                    <strong>Compact Payslip Report</strong><br/>
                    Generate a single-page compact payslip report with currency conversion support.
                    Select one or more payslips and choose the display currency.
                </div>

                <group>
                    <group>
                        <field name="payslip_ids" widget="many2many_tags"/>
                        <field name="payslip_count" invisible="1"/>
                    </group>
                    <group>
                        <field name="currency_id" widget="radio" options="{'horizontal': true}"/>
                    </group>
                </group>

                <!-- Exchange Rate Options (only visible if VEB selected) -->
                <group string="Exchange Rate Options / Opciones de Tasa de Cambio"
                       invisible="currency_id.name != 'VEB'">
                    <group>
                        <field name="use_custom_rate"/>
                        <field name="custom_exchange_rate"
                               invisible="not use_custom_rate"
                               placeholder="e.g., 236.4601"/>
                    </group>
                    <group>
                        <label for="rate_date" string="Rate Date (Auto Lookup)"
                               invisible="use_custom_rate"/>
                        <field name="rate_date"
                               invisible="use_custom_rate"
                               placeholder="Leave blank for latest rate"/>
                    </group>
                </group>

                <div class="alert alert-warning" role="alert" invisible="not use_custom_rate">
                    <strong>Custom Rate Active</strong><br/>
                    The report will use your custom rate (<field name="custom_exchange_rate"/> VEB/USD) instead of automatic rate lookup.
                </div>

                <div class="alert alert-success" role="alert" invisible="payslip_count == 0">
                    <strong><field name="payslip_count"/> payslip(s) selected</strong><br/>
                    A separate report will be generated for each selected payslip.
                    Exchange rate: <field name="exchange_rate_display" readonly="1"/>
                </div>

                <footer>
                    <button name="action_generate_report"
                            string="Generate Report"
                            type="object"
                            class="btn-primary"
                            invisible="payslip_count == 0"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_payslip_compact_wizard" model="ir.actions.act_window">
        <field name="name">Comprobante de Pago (Compacto)</field>
        <field name="res_model">payslip.compact.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_payslip_compact_wizard_form"/>
    </record>
</odoo>
