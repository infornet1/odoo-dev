<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Relación de Liquidación Wizard -->

    <record id="liquidacion_breakdown_wizard_view_form" model="ir.ui.view">
        <field name="name">liquidacion.breakdown.wizard.form</field>
        <field name="model">liquidacion.breakdown.wizard</field>
        <field name="arch" type="xml">
            <form string="Relación de Liquidación">
                <div class="alert alert-info" role="alert">
                    <strong>Liquidation Breakdown Report</strong><br/>
                    Generates a detailed breakdown showing all formula calculations for benefits and deductions.
                    This report helps employees understand exactly how their liquidation amount was calculated.
                </div>
                <group>
                    <group>
                        <field name="payslip_ids" widget="many2many_tags"/>
                        <field name="payslip_count" invisible="1"/>
                    </group>
                    <group>
                        <field name="currency_id" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                </group>
                <div class="alert alert-success" role="alert" invisible="payslip_count == 0">
                    <strong><field name="payslip_count"/> payslip(s) selected</strong><br/>
                    A separate report will be generated for each selected payslip.
                </div>
                <footer>
                    <button name="action_print_pdf" string="Generate PDF" type="object" class="btn-primary"
                            invisible="payslip_count == 0"/>
                    <button name="action_export_xlsx" string="Export XLSX" type="object" class="btn-success"
                            invisible="payslip_count == 0"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_liquidacion_breakdown_wizard" model="ir.actions.act_window">
        <field name="name">Relación de Liquidación</field>
        <field name="res_model">liquidacion.breakdown.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="liquidacion_breakdown_wizard_view_form"/>
    </record>

</odoo>
