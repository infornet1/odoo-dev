<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Payroll Taxes Wizard View (PLACEHOLDER) -->

    <record id="payroll_taxes_wizard_view_form" model="ir.ui.view">
        <field name="name">payroll.taxes.wizard.form</field>
        <field name="model">payroll.taxes.wizard</field>
        <field name="arch" type="xml">
            <form string="Payroll Taxes Report">
                <div class="alert alert-info" role="alert">
                    <strong>Report Under Development</strong><br/>
                    This report will show tax withholdings (ARI, Social Security) and contributions.
                </div>
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="employee_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <footer>
                    <button name="action_print_report" string="Print Report" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_payroll_taxes_wizard" model="ir.actions.act_window">
        <field name="name">Payroll Taxes</field>
        <field name="res_model">payroll.taxes.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
