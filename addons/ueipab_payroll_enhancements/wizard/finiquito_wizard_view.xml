<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Finiquito Wizard Form View -->
    <record id="view_finiquito_wizard" model="ir.ui.view">
        <field name="name">finiquito.wizard.form</field>
        <field name="model">finiquito.wizard</field>
        <field name="arch" type="xml">
            <form string="Acuerdo Finiquito Laboral">
                <group>
                    <field name="payslip_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    <field name="currency_id" options="{'no_create': True, 'no_open': True}"/>
                </group>
                <group>
                    <label for="output_format" string="Output Format"/>
                    <field name="output_format" widget="radio" options="{'horizontal': True}"/>
                </group>
                <group string="Exchange Rate Options (VEB Only)">
                    <group>
                        <field name="use_custom_rate"/>
                        <field name="custom_exchange_rate"
                               invisible="not use_custom_rate"
                               required="use_custom_rate"
                               placeholder="e.g., 236.4601"/>
                    </group>
                    <group>
                        <label for="rate_date" string="Rate Date (Auto Lookup)"
                               invisible="use_custom_rate"/>
                        <field name="rate_date"
                               invisible="use_custom_rate"
                               placeholder="Leave blank to use payslip date"/>
                    </group>
                </group>
                <div class="alert alert-warning" role="alert" invisible="not use_custom_rate">
                    <strong>Custom Rate Active</strong><br/>
                    The report will use your custom rate (<field name="custom_exchange_rate"/> VEB/USD) instead of the automatic rate lookup.
                    This is useful when the payment date differs from the liquidation date.
                </div>
                <footer>
                    <button name="action_generate_report" string="Generate Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_finiquito_wizard" model="ir.actions.act_window">
        <field name="name">Acuerdo Finiquito Laboral</field>
        <field name="res_model">finiquito.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="hr_payroll_community.model_hr_payslip"/>
        <field name="binding_type">action</field>
    </record>

    <!-- Menu Item under Reporting -->
    <menuitem
        id="menu_finiquito_wizard"
        name="Acuerdo Finiquito Laboral"
        parent="ueipab_payroll_enhancements.menu_payroll_reports"
        action="action_finiquito_wizard"
        sequence="60"/>
        
</odoo>
