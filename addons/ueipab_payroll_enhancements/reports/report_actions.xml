<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================
         Report Actions and Paper Format
         ======================================== -->

    <!-- Paper Format for Disbursement List -->
    <record id="paperformat_disbursement_list" model="report.paperformat">
        <field name="name">Disbursement List Format</field>
        <field name="default" eval="False"/>
        <field name="format">Letter</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">25</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">35</field>
        <field name="dpi">90</field>
    </record>

    <!-- Report Action for Disbursement List -->
    <record id="action_report_disbursement_list" model="ir.actions.report">
        <field name="name">Disbursement List</field>
        <field name="model">hr.payslip.run</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ueipab_payroll_enhancements.report_disbursement_list</field>
        <field name="report_file">ueipab_payroll_enhancements.report_disbursement_list</field>
        <field name="binding_model_id" ref="hr_payroll_community.model_hr_payslip_run"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_disbursement_list"/>
        <field name="print_report_name">'Disbursement_List_%s' % (object.name.replace('/', '_'))</field>
    </record>

    <!-- Paper Format for Prestaciones Interest Report -->
    <record id="paperformat_prestaciones_interest" model="report.paperformat">
        <field name="name">Prestaciones Interest Format</field>
        <field name="default" eval="False"/>
        <field name="format">Letter</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
        <field name="disable_shrinking" eval="True"/>
    </record>

    <!-- Report Action for Prestaciones Interest -->
    <record id="action_report_prestaciones_interest" model="ir.actions.report">
        <field name="name">Prestaciones Soc. Intereses</field>
        <field name="model">hr.payslip</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ueipab_payroll_enhancements.prestaciones_interest</field>
        <field name="report_file">ueipab_payroll_enhancements.prestaciones_interest</field>
        <field name="paperformat_id" ref="paperformat_prestaciones_interest"/>
        <field name="print_report_name">'Prestaciones_Interest_%s' % (object.employee_id.name.replace(' ', '_'))</field>
    </record>

    <!-- Paper Format for Liquidación Breakdown Report -->
    <record id="paperformat_liquidacion_breakdown" model="report.paperformat">
        <field name="name">Liquidación Breakdown Format</field>
        <field name="default" eval="False"/>
        <field name="format">Letter</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
        <field name="disable_shrinking" eval="True"/>
    </record>

    <!-- Report Action for Liquidación Breakdown -->
    <record id="action_report_liquidacion_breakdown" model="ir.actions.report">
        <field name="name">Relación de Liquidación</field>
        <field name="model">hr.payslip</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ueipab_payroll_enhancements.liquidacion_breakdown_report</field>
        <field name="report_file">ueipab_payroll_enhancements.liquidacion_breakdown_report</field>
        <field name="paperformat_id" ref="paperformat_liquidacion_breakdown"/>
        <field name="print_report_name">'Relacion_Liquidacion_%s_%s' % (object.employee_id.name.replace(' ', '_'), object.date_to.strftime('%Y%m%d'))</field>
    </record>

    <!-- Paper Format for Finiquito Report -->
    <record id="paperformat_finiquito" model="report.paperformat">
        <field name="name">Finiquito Format</field>
        <field name="default" eval="False"/>
        <field name="format">Letter</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">15</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">15</field>
        <field name="margin_right">15</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
        <field name="disable_shrinking" eval="True"/>
    </record>

    <!-- Report Action for Finiquito -->
    <record id="action_report_finiquito" model="ir.actions.report">
        <field name="name">Acuerdo Finiquito Laboral</field>
        <field name="model">hr.payslip</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ueipab_payroll_enhancements.finiquito_report</field>
        <field name="report_file">ueipab_payroll_enhancements.finiquito_report</field>
        <field name="paperformat_id" ref="paperformat_finiquito"/>
        <field name="print_report_name">'Finiquito_%s_%s' % (object.employee_id.name.replace(' ', '_'), object.date_to.strftime('%Y%m%d'))</field>
    </record>

</odoo>
