<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================
         Aguinaldos Disbursement Report
         Portrait, Letter Size, Clean Layout
         ======================================== -->

    <!-- Custom Paper Format: Portrait Letter -->
    <record id="paperformat_aguinaldos_disbursement" model="report.paperformat">
        <field name="name">Aguinaldos Disbursement Format</field>
        <field name="default" eval="False"/>
        <field name="format">Letter</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">25</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">35</field>
        <field name="dpi">90</field>
    </record>

    <!-- Report Template -->
    <template id="aguinaldos_disbursement_doc">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page" style="font-family: 'Arial', sans-serif; font-size: 10pt;">
                    <!-- Calculate actual period from payslips -->
                    <t t-set="period_start" t-value="min(docs.mapped('date_from')) if docs else None"/>
                    <t t-set="period_end" t-value="max(docs.mapped('date_to')) if docs else None"/>

                    <!-- Report Header -->
                    <div class="row" style="margin-bottom: 15px; padding-bottom: 10px; border-bottom: 3px solid #c41e3a;">
                        <div class="col-12 text-center">
                            <h2 style="margin-bottom: 5px; margin-top: 0; color: #c41e3a;">
                                <strong>RELACION DE PAGO - AGUINALDOS</strong>
                            </h2>
                            <h4 style="margin: 5px 0; color: #2e7d32;">
                                Bono Navideo Diciembre 2025
                            </h4>
                            <p style="margin: 5px 0; font-size: 9pt; color: #666;">
                                <t t-if="data and data.get('batch_name')">
                                    Lote: <strong><t t-esc="data.get('batch_name')"/></strong> |
                                </t>
                                <t t-if="period_start and period_end">
                                    Periodo: <strong><t t-esc="period_start"/> - <t t-esc="period_end"/></strong> |
                                </t>
                                Moneda: <strong><t t-esc="currency.name"/> (<t t-esc="currency.symbol"/>)</strong>
                                <t t-if="currency.name == 'VEB'">
                                    @ <t t-esc="'{:,.4f}'.format(exchange_rate)"/> VEB/USD
                                </t>
                            </p>
                            <p style="margin: 3px 0; font-size: 8pt; color: #999;">
                                Fecha de Reporte: <span t-esc="time.strftime('%d/%m/%Y %H:%M')"/>
                            </p>
                        </div>
                    </div>

                    <!-- Employee Table -->
                    <table class="table table-sm table-bordered" style="font-size: 9pt; margin-top: 10px; width: 100%;">
                        <thead style="background-color: #c41e3a; color: white;">
                            <tr>
                                <th style="width: 5%; text-align: center; padding: 8px; font-size: 8pt;">#</th>
                                <th style="width: 15%; text-align: center; padding: 8px; font-size: 8pt;">CEDULA</th>
                                <th style="width: 30%; padding: 8px; font-size: 8pt;">EMPLEADO</th>
                                <th style="width: 18%; text-align: right; padding: 8px; font-size: 8pt;">SALARIO BASE (Ref.)</th>
                                <th style="width: 18%; text-align: right; padding: 8px; font-size: 8pt;">AGUINALDO</th>
                                <th style="width: 14%; text-align: center; padding: 8px; font-size: 8pt;">FIRMA</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="sequence" t-value="1"/>
                            <t t-foreach="employee_data" t-as="emp">
                                <tr>
                                    <td style="text-align: center; padding: 6px; font-size: 8pt;">
                                        <t t-esc="sequence"/>
                                    </td>
                                    <td style="text-align: center; padding: 6px; font-size: 8pt;">
                                        <t t-esc="emp['cedula']"/>
                                    </td>
                                    <td style="padding: 6px; font-size: 8pt;">
                                        <t t-esc="emp['name']"/>
                                    </td>
                                    <td style="text-align: right; padding: 6px; font-size: 8pt;">
                                        <t t-esc="'{:,.2f}'.format(emp['salary_ref'] * exchange_rate)"/>
                                    </td>
                                    <td style="text-align: right; padding: 6px; font-size: 8pt; font-weight: bold; color: #2e7d32;">
                                        <t t-esc="'{:,.2f}'.format(emp['aguinaldo'] * exchange_rate)"/>
                                    </td>
                                    <td style="text-align: center; padding: 6px; min-height: 30px;">
                                        <!-- Empty for physical signature -->
                                    </td>
                                </tr>
                                <t t-set="sequence" t-value="sequence + 1"/>
                            </t>
                        </tbody>
                        <!-- Totals Footer -->
                        <tfoot style="background-color: #f5f5f5; font-weight: bold;">
                            <tr style="border-top: 2px solid #c41e3a;">
                                <td colspan="3" style="text-align: right; padding: 8px; font-size: 9pt;">
                                    <strong>TOTALES (<t t-esc="employee_count"/> empleados):</strong>
                                </td>
                                <td style="text-align: right; padding: 8px; font-size: 9pt;">
                                    <t t-esc="currency.symbol"/> <t t-esc="'{:,.2f}'.format(total_salary_ref * exchange_rate)"/>
                                </td>
                                <td style="text-align: right; padding: 8px; font-size: 10pt; color: #2e7d32;">
                                    <t t-esc="currency.symbol"/> <t t-esc="'{:,.2f}'.format(total_aguinaldo * exchange_rate)"/>
                                </td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>

                    <!-- Summary Box -->
                    <div class="row mt-4" style="margin-top: 20px;">
                        <div class="col-6">
                            <div style="border: 1px solid #ddd; padding: 15px; background-color: #fafafa;">
                                <h5 style="margin-top: 0; color: #333;">Resumen</h5>
                                <p style="margin: 5px 0; font-size: 9pt;">
                                    <strong>Total Empleados:</strong> <t t-esc="employee_count"/>
                                </p>
                                <p style="margin: 5px 0; font-size: 9pt;">
                                    <strong>Total Aguinaldos:</strong>
                                    <span style="font-size: 11pt; color: #2e7d32;">
                                        <t t-esc="currency.symbol"/> <t t-esc="'{:,.2f}'.format(total_aguinaldo * exchange_rate)"/>
                                    </span>
                                </p>
                                <t t-if="currency.name != 'USD'">
                                    <p style="margin: 5px 0; font-size: 8pt; color: #666;">
                                        (USD <t t-esc="'{:,.2f}'.format(total_aguinaldo)"/> @ <t t-esc="'{:,.4f}'.format(exchange_rate)"/>)
                                    </p>
                                </t>
                            </div>
                        </div>
                        <div class="col-6">
                            <div style="border: 1px solid #ddd; padding: 15px; background-color: #fafafa;">
                                <h5 style="margin-top: 0; color: #333;">Concepto</h5>
                                <p style="margin: 5px 0; font-size: 9pt;">
                                    <strong>LOTTT Art. 131-132:</strong> 1 mes de salario
                                </p>
                                <p style="margin: 5px 0; font-size: 9pt;">
                                    <strong>Adicional UEIPAB:</strong> 1 mes adicional
                                </p>
                                <p style="margin: 5px 0; font-size: 9pt; border-top: 1px solid #ddd; padding-top: 5px;">
                                    <strong>Total:</strong> 2 meses de salario base
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Signature Section -->
                    <div class="row mt-5" style="margin-top: 50px;">
                        <div class="col-4 text-center">
                            <div style="border-top: 1px solid #333; margin-top: 40px; padding-top: 5px;">
                                <p style="margin: 0; font-size: 8pt;">Elaborado por</p>
                                <p style="margin: 0; font-size: 8pt; color: #666;">Recursos Humanos</p>
                            </div>
                        </div>
                        <div class="col-4 text-center">
                            <div style="border-top: 1px solid #333; margin-top: 40px; padding-top: 5px;">
                                <p style="margin: 0; font-size: 8pt;">Revisado por</p>
                                <p style="margin: 0; font-size: 8pt; color: #666;">Administracion</p>
                            </div>
                        </div>
                        <div class="col-4 text-center">
                            <div style="border-top: 1px solid #333; margin-top: 40px; padding-top: 5px;">
                                <p style="margin: 0; font-size: 8pt;">Aprobado por</p>
                                <p style="margin: 0; font-size: 8pt; color: #666;">Direccion</p>
                            </div>
                        </div>
                    </div>

                    <!-- Footer Note -->
                    <div class="row mt-3" style="margin-top: 20px; font-size: 7pt; color: #999;">
                        <div class="col-12">
                            <p style="margin: 0;">
                                <strong>Nota:</strong> Este reporte muestra el pago de Aguinaldos (Bono Navideno) segun
                                Ley Organica del Trabajo (LOTTT Art. 131-132) mas bonificacion adicional otorgada por UEIPAB.
                                Salario Base (Ref.) = Salario V2 del contrato. Aguinaldo = 2 meses de salario (1 LOTTT + 1 adicional UEIPAB).
                                <t t-if="exchange_rate_source">
                                    Tasa de cambio: <t t-esc="exchange_rate_source"/>.
                                </t>
                            </p>
                        </div>
                    </div>

                </div><!-- close page -->
            </t><!-- close external_layout -->
        </t><!-- close html_container -->
    </template>

    <!-- Report Action -->
    <record id="action_report_aguinaldos_disbursement" model="ir.actions.report">
        <field name="name">Aguinaldos Disbursement Report</field>
        <field name="model">hr.payslip</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ueipab_payroll_enhancements.aguinaldos_disbursement_doc</field>
        <field name="report_file">ueipab_payroll_enhancements.aguinaldos_disbursement_doc</field>
        <field name="print_report_name">'Aguinaldos_Disbursement_' + time.strftime('%Y%m%d')</field>
        <field name="paperformat_id" ref="paperformat_aguinaldos_disbursement"/>
    </record>

</odoo>
