<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Skill Tree View -->
    <record id="ai_agent_skill_view_tree" model="ir.ui.view">
        <field name="name">ai.agent.skill.tree</field>
        <field name="model">ai.agent.skill</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="active" column_invisible="1"/>
                <field name="model_name"/>
                <field name="source_model"/>
                <field name="max_turns"/>
                <field name="timeout_hours"/>
                <field name="conversation_count" string="Conversaciones"/>
                <field name="resolved_count" string="Resueltas"/>
            </tree>
        </field>
    </record>

    <!-- Skill Form View -->
    <record id="ai_agent_skill_view_form" model="ir.ui.view">
        <field name="name">ai.agent.skill.form</field>
        <field name="model">ai.agent.skill</field>
        <field name="arch" type="xml">
            <form string="AI Agent Skill">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Nombre del Skill"/></h1>
                    </div>
                    <group>
                        <group string="General">
                            <field name="code"/>
                            <field name="active"/>
                            <field name="source_model"/>
                        </group>
                        <group string="Limites">
                            <field name="max_turns"/>
                            <field name="timeout_hours"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Configuracion AI">
                            <group>
                                <field name="model_name"/>
                            </group>
                            <separator string="Prompt del Sistema"/>
                            <field name="system_prompt" placeholder="Instrucciones para el modelo AI..."/>
                            <separator string="Plantilla de Saludo"/>
                            <field name="greeting_template" placeholder="Mensaje inicial de WhatsApp (opcional, el skill puede generar uno automatico)..."/>
                        </page>
                        <page string="Descripcion">
                            <field name="description" placeholder="Descripcion del proposito de este skill..."/>
                        </page>
                        <page string="Estadisticas">
                            <group>
                                <field name="conversation_count"/>
                                <field name="resolved_count"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Skill Action -->
    <record id="ai_agent_skill_action" model="ir.actions.act_window">
        <field name="name">Configuracion de Skills</field>
        <field name="res_model">ai.agent.skill</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay skills configurados.
            </p>
            <p>
                Los skills definen como el agente AI interactua con los clientes
                para diferentes procesos de negocio.
            </p>
        </field>
    </record>

</odoo>
