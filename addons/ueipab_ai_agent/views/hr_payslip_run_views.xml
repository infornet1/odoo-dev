<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add "Recoleccion de Datos" button on Payslip Batch form -->
    <record id="hr_payslip_run_form_data_collection" model="ir.ui.view">
        <field name="name">hr.payslip.run.form.data.collection</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll_community.hr_payslip_run_view_form"/>
        <field name="arch" type="xml">
            <button name="close_payslip_run" position="before">
                <button name="%(ueipab_ai_agent.action_create_collection_from_batch)d"
                        type="action"
                        string="Recoleccion de Datos"
                        class="oe_highlight"
                        icon="fa-address-card"
                        context="{'default_payslip_run_id': id}"/>
            </button>
        </field>
    </record>

</odoo>
