<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Poll WhatsApp Messages (fallback to webhook) -->
        <record id="ir_cron_poll_whatsapp_messages" model="ir.cron">
            <field name="name">AI Agent: Poll WhatsApp Messages</field>
            <field name="model_id" ref="model_ai_agent_conversation"/>
            <field name="state">code</field>
            <field name="code">model._cron_poll_messages()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

        <!-- Check Conversation Timeouts -->
        <record id="ir_cron_check_conversation_timeouts" model="ir.cron">
            <field name="name">AI Agent: Check Conversation Timeouts</field>
            <field name="model_id" ref="model_ai_agent_conversation"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_timeouts()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

        <!-- Credit Guard: Check API Credits -->
        <record id="ir_cron_check_credits" model="ir.cron">
            <field name="name">AI Agent: Credit Guard</field>
            <field name="model_id" ref="model_ai_agent_conversation"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_credits()</field>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

        <!-- Archive WhatsApp Attachments -->
        <record id="ir_cron_archive_attachments" model="ir.cron">
            <field name="name">AI Agent: Archive Attachments</field>
            <field name="model_id" ref="model_ai_agent_conversation"/>
            <field name="state">code</field>
            <field name="code">model._cron_archive_attachments()</field>
            <field name="interval_number">2</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

    </data>
</odoo>
