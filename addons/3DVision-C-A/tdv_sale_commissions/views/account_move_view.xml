<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_inherit_account" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button string="Set Commissions"
                    name="set_commission_partner"
                    type="object"
                    invisible="state != 'draft'"
                    groups="tdv_sale_commissions.can_assign_massive_commissions"
                />
                <!-- attrs="{'invisible': [('state', '!=', 'draft')]}" -->
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree" position="inside">
                <field name="commission_partner_id"
                    options=" {'no_quick_create':True,'no_create_edit':True,'no_open': True,}"
                    domain="[('has_commissions', '=', True)]"
                />
            </xpath>
        </field>
    </record>

    <record id="view_move_tree_inherit_account" model="ir.ui.view">
        <field name="name">account.move.view.tree.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button string="Update Commisions Vendor"
                    name="update_commissions"
                    type="object"
                    groups="tdv_sale_commissions.can_assign_massive_commissions"
                />
                <!-- attrs="{'invisible': [('state', '!=', 'draft')]}" -->
            </xpath>
        </field>
    </record>

</odoo>