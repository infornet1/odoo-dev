<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Definición del formato de papel personalizado -->
    <record id="custom_paperformat" model="report.paperformat">
        <field name="name">Formato Personalizado</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">279</field>
        <field name="page_width">216</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">30</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">35</field>
        <field name="dpi">90</field>
    </record>

    <!-- Acción de reporte PDF -->
    <record id="action_custom_quotation_report" model="ir.actions.report">
        <field name="name">Cotización Personalizada</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_print.custom_quotation_template</field>
        <field name="print_report_name">'Cotización - %s' % object.name</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="custom_paperformat"/>
    </record>

    <!-- Template principal del reporte -->
    <template id="custom_quotation_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="article" style="font-family: 'Calibri'; font-size: small; position: relative; min-height: 100%;">
                    <!-- Encabezado compacto -->
                    <div class="header" style="position: relative; margin-bottom: 20px; padding-bottom: 10px;">
                        <!-- Contenedor principal: logo - nombre - número -->
                        <div style="display: flex; align-items: center; justify-content: space-between; width: 100%; margin-bottom: 10px; flex-wrap: wrap;">
                            <!-- Logo -->
                            <div t-if="o.company_id.logo" style="flex: 0 0 auto; margin-right: 15px; margin-bottom: -10px;">
                                <img t-att-src="image_data_uri(o.company_id.logo)" style="height: 100px; max-width: 180px; object-fit: contain;"/>
                            </div>

                            <!-- Información de la compañía -->
                            <div style="text-align: center; flex: 1 1 auto; min-width: 200px; margin: 0 5px; padding: 0;">
                                <div style="text-align: left; font-size: 0.9em; line-height: 1.1; margin-top: 2px; padding: 0; margin: 0 400px 0 0px;">
                                    <t t-foreach="o.company_id.street.split('\n')" t-as="line">
                                        <div t-esc="line" style="margin: 0; padding: 0;"/>
                                    </t>
                                </div>
                            </div>

                            <!-- Número de cotización -->
                            <div style="position: absolute; top: 0; right: 0; padding: 5px;">
                                <div style="font-weight: bold; font-size: 1.1em;">COTIZACIÓN</div>
                                <div style="font-size: 1.0em;">N°: <span t-field="o.name"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Datos del cliente y cotización -->
                    <div class="row" style="display: flex; justify-content: space-between; margin-top: 20px; margin-bottom: 10px; flex-wrap: wrap; font-size: 9pt;">
                        <!-- Columna izquierda: Datos del cliente -->
                        <div style="width: 60%; min-width: 300px; margin-bottom: 15px;">
                            <div style="margin-bottom: 5px;">
                                <strong>Cliente:</strong>
                                <span t-field="o.partner_id"/>
                            </div>
                            <div style="margin-bottom: 5px;">
                                <strong>RIF:</strong>
                                <span t-field="o.partner_id.vat"/>
                            </div>
                            <div style="margin-bottom: 5px;">
                                <strong>Dirección:</strong>
                                <span t-out="o.partner_id._display_address()"/>
                            </div>
                            <div style="margin-bottom: 5px;">
                                <strong>Teléfono:</strong>
                                <span t-field="o.partner_id.phone"/>
                            </div>
                            <div style="margin-bottom: 5px;">
                                <strong>Correo:</strong>
                                <span t-field="o.partner_id.email"/>
                            </div>
                        </div>

                        <!-- Columna derecha: Datos de la cotización -->
                        <div style="width: 35%; min-width: 200px; text-align: right;">
                            <div style="margin-bottom: 5px;">
                                <strong>Fecha:</strong>
                                <span t-field="o.date_order" t-options='{"format": "dd/MM/yyyy"}'/>
                            </div>
                            <div style="margin-bottom: 5px;">
                                <strong>Válido hasta:</strong>
                                <span t-field="o.validity_date" t-options='{"format": "dd/MM/yyyy"}'/>
                            </div>
                            <div style="margin-bottom: 5px;">
                                <strong>Referencia:</strong>
                                <span t-field="o.client_order_ref"/>
                            </div>
                        </div>
                    </div>

                    <!-- Tabla de productos -->
                    <table class="table table-sm table-borderless" style="width: 100%; border-collapse: collapse; margin: 15px 0; font-size: 8pt;">
                        <thead>
                            <tr>
                                <th style="width:5%; text-align: center; padding-bottom: 8px;">#</th>
                                <th style="width:50%; text-align: left; padding-bottom: 8px;">Descripción</th>
                                <th style="width:10%; text-align: right; padding-bottom: 8px;">Cantidad</th>
                                <th style="width:15%; text-align: right; padding-bottom: 8px;">P. Unitario</th>
                                <th style="width:10%; text-align: right; padding-bottom: 8px;">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="idx" t-value="0"/>
                            <tr t-foreach="o.order_line" t-as="line">
                                <t t-set="idx" t-value="not line.display_type and idx + 1 or idx"/>
                                <td style="text-align: center; padding: 5px 0;">
                                    <span t-esc="not line.display_type and idx or ''"/>
                                </td>
                                <td style="padding: 5px 0;">
                                    <span t-field="line.name"/>
                                    <t t-if="line.display_type == 'line_section'">
                                        <style>
                                                tr[t-as-line]:has(td span[t-field='line.name'][t-if='line.display_type == line_section']) {
                                                    font-weight: bold;
                                                    background-color: #f8f9fa;
                                                }
                                        </style>
                                    </t>
                                </td>
                                <td style="text-align: right; padding: 5px 0;">
                                    <span t-if="not line.display_type" t-field="line.product_uom_qty"/>
                                </td>
                                <td style="text-align: right; padding: 5px 0;">
                                    <span t-if="not line.display_type" t-field="line.price_unit" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                </td>
                                <td style="text-align: right; padding: 5px 0;">
                                    <span t-if="not line.display_type" t-field="line.price_subtotal" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>


                    <!-- Pie de página - ahora relativo al contenido -->
                    <div class="footer" style="width: 100%; font-size: 8pt; color: #000000; border-top: 2px solid #ccc; padding-top: 2px; margin-top: 30px; position: relative;">
                        <div class="row" style="display: flex;">
                            <!-- Columna izquierda: términos e instrucciones -->
                            <div style="width: 25%;">
                                <!-- Report Footer primero -->
                                <div style="line-height: 1.1;">
                                    <div t-field="o.company_id.report_footer"/>
                                </div>
                            </div>

                            <div style="width: 52%;">
                                <!-- Términos y condiciones después -->
                                <div style="margin-top: 15px; text-align: center;">                                    
                                    <div style="white-space: pre-line; line-height: 1.2;">
                                        <span t-field="o.note"/>
                                    </div>
                                </div>
                            </div>

                            <!-- Columna derecha: montos -->
                            <div class="col-4 text-end" style="width: 20%; text-align: right; color: #000000;">
                                <div>
                                    <strong style="color: #000000;">Subtotal:</strong>
                                    <span t-field="o.amount_untaxed" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}" style="color: #000000;"/>
                                </div>
                                <div>
                                    <strong style="color: #000000;">IVA (Impuesto):</strong>
                                    <span t-field="o.amount_tax" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}" style="color: #000000;"/>
                                </div>
                                <div style="font-weight: bold;">
                                    <strong style="color: #000000;">Total:</strong>
                                    <span t-field="o.amount_total" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}" style="color: #000000;"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>