<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="wizard_payslip_report_view_form" model="ir.ui.view">
		<field name="name">wizard.payslip.report.form</field>
		<field name="model">wizard.payslip.report</field>
		<field name="arch" type="xml">
			<form>
				<group invisible="1">
					<field name="name" />
					<field name="payslip_ids" />
					<field name="xls_file" readonly="1" filename="name" />
				</group>
				<div>
					<h4>* Click button to print Employee Payslip Report.</h4>
				</div>
				<footer>
					<button name="print_report_pdf" string="Recibo de pagos (PDF)" type="object" class="btn-primary"/>
					<button name="print_report_pdf_secondary" string="Recibo de pagos en conversión (PDF)" type="object" class="btn-primary"/>
					<button name="print_report_xls" string="Recibo de pagos (Excel)" type="object" class="btn-info"/>
					<button name="print_report_xls_secondary" string="Recibo de pagos en conversión (Excel)" type="object" class="btn-info"/>
					<button string="Cerrar" class="oe_link" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>

	<record id="action_wizard_payslip_report" model="ir.actions.act_window">
		<field name="name">Payslip Report</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">wizard.payslip.report</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
		<field name="binding_model_id" ref="hr_payroll.model_hr_payslip" />
	</record>

</odoo>