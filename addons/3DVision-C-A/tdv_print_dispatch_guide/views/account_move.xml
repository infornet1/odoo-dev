<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista heredada para facturas con atributo invisible directo -->
    <record id="view_move_form_inherit_custom_print" model="ir.ui.view">
        <field name="name">account.move.form.inherit.custom.print</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            
            <!-- Campo lógico oculto -->
            <xpath expr="//field[@name='invoice_origin']" position="after">
                <field name="enable_custom_invoice_dispatch_guide_format" invisible="1"/>
            </xpath>
            
            <!-- Botón de impresión personalizada -->
            <xpath expr="//button[@name='action_invoice_sent']" position="after">
                <field name="enable_custom_invoice_dispatch_guide_format" invisible="1"/>
                <div class="btn-group" invisible="not enable_custom_invoice_dispatch_guide_format">
                    <button class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <span>Guia de despacho personalizada</span>
                    </button>
                    <div class="dropdown-menu" role="menu">
                        <button type="object" name="action_print_custom_invoice_dispatch_guide" string="Guia de Despacho" class="dropdown-item"/>
                    </div>
                </div>
            </xpath>

            <xpath expr="//field[@name='fiscal_correlative']" position="after">
                <field name="vehicle_id" />
                <field name="chofer_id" context="{'is_chofer': True}"/>
            </xpath>


        </field>
    </record>

    









</odoo>
