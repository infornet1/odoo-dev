<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_custom_print" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.custom.print</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            
            <!-- Campo l贸gico oculto -->
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="enable_custom_delivery_print" invisible="1"/>
            </xpath>
            <!-- Bot贸n de impresi贸n personalizada -->
            <xpath expr="//button" position="after">
                <button name="action_print_delivery_report" 
                        type="object" 
                        string="Impresi贸n Personalizada (E)"
                        class="btn btn-primary"
                        invisible="not enable_custom_delivery_print"/>
