<?xml version="1.0" encoding="utf-8"?>
<template id="template" xml:space="preserve">
    <t t-name="tdv_multi_currency_pos.PaymentScreenStatus" t-inherit="point_of_sale.PaymentScreenStatus" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('paymentlines-empty')]/div[last()]" position="before">
            <div class="total text-center py-2 text-success">
                <t t-esc="secondTotalDueText" />
            </div>
        </xpath>
        <xpath expr="//div[hasclass('payment-status-remaining')]" position="inside">
            -
            <span class="amount" t-att-class="{ 'highlight text-primary fw-bolder': props.order.get_due() > 0 }">
                <t t-esc="secondRemainingText" />
            </span>
        </xpath>
        <xpath expr="//div[hasclass('payment-status-total-due')]" position="inside">
            -
            <span>
                <t t-esc="secondTotalDueText" />
            </span>
        </xpath>
        <xpath expr="//div[hasclass('payment-status-change')]" position="inside">
            -
            <span class="amount" t-att-class="{ 'highlight text-primary fw-bolder': props.order.get_change() > 0 }">
                <t t-esc="secondChangeText" />
            </span>
            <br/>
            <!-- Para agregar la tasa: -->
            <!-- <span style='background-color:red'>Tasa:</span> -->
        </xpath>
    </t>
</template>