<?xml version="1.0" encoding="utf-8"?>
<template id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//OrderWidget" position="replace">
            <OrderWidget lines="props.data.orderlines" t-slot-scope="scope">
                <t t-set="line" t-value="scope.line"/>
                <t t-set="not_show" t-value="(props.data.receiptCurrencySelection === 'main')? 'secondPrice':
                                            (props.data.receiptCurrencySelection === 'second')? 'price': ''"/>
                <Orderline line="omit(scope.line, 'customerNote', not_show)" class="{ 'pe-none': true }">
                    <li t-if="line.customerNote" class="customer-note w-100 p-2 my-1 rounded text-break">
                        <i class="fa fa-sticky-note me-1" role="img" aria-label="Customer Note" title="Customer Note"/>
                        <t t-out="line.customerNote" />
                    </li>
                    <ul t-if="line.pack_lot_lines">
                        <li t-foreach="line.pack_lot_lines" t-as="lot" t-key="lot.cid">
                            <t t-if="lot.order_line.product.tracking == 'lot'">
                                Lot Number <t t-out="lot.lot_name"/>
                            </t>
                            <t t-else="">
                                SN <t t-out="lot.lot_name"/>
                            </t>
                        </li>
                    </ul>
                </Orderline>
            </OrderWidget>
        </xpath>

        <xpath expr="//div[hasclass('pos-receipt-right-align')]" position="replace">
            <div class="pos-receipt-right-align">________________________________________</div>
        </xpath>

        <xpath expr="//div[hasclass('pos-receipt-amount')]" position="replace">
            <div class="pos-receipt-amount">
                <span t-if="props.data.receiptCurrencySelection !== 'second'" t-out="props.formatCurrency(props.data.amount_total)" class="pos-receipt-right-align"/>
                <span t-if="props.data.receiptCurrencySelection !== 'main'" t-out="props.formatCurrency(props.data.amount_total, true, props.data.secondCurrency)" class="pos-receipt-right-align me-3"/>
            </div>
        </xpath>

        <xpath expr="//div[hasclass('paymentlines')]" position="replace">
            <div class="paymentlines" t-foreach="props.data.paymentlines" t-as="line" t-key="line_index">
                <t t-out="line.name" />
                <span t-out="props.formatCurrency(line.amount, true, line.currency, true)" class="pos-receipt-right-align"/>
            </div>
        </xpath>

        <xpath expr="//div[hasclass('receipt-change')]" position="replace">
            <div class="receipt-change mt-2">
                CHANGE
                <span t-if="props.data.receiptCurrencySelection !== 'second'" t-out="props.formatCurrency(props.data.change)" class="pos-receipt-right-align"/>
                <span t-if="props.data.receiptCurrencySelection !== 'main'" t-out="props.formatCurrency(props.data.change, true, props.data.secondCurrency)" class="pos-receipt-right-align me-3"/>
            </div>
        </xpath>

        <xpath expr="//div[hasclass('pos-receipt-taxes')]" position="replace">
        </xpath>
    </t>
</template>
