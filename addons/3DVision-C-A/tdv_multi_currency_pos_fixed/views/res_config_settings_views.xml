<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit_tdv_multi_currency_pos" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_bills_and_receipts_section']" position="inside">
                <setting name="Receipt Display Currency" id="pos_receipt_display_currency" help="Select the currency to be shown on the PoS receipt">
                    <field name="report_currency_selection"/>
                </setting>
            </xpath>
        </field>
    </record>

</odoo>
