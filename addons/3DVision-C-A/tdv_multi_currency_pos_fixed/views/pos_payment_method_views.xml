<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="pos_payment_method_view_form_inherit_tdv_multi_currency_pos" model="ir.ui.view">
    <field name="name">pos.payment.method.view.form.inherit</field>
    <field name="model">pos.payment.method</field>
    <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
    <field name="arch" type="xml">
      <field name="journal_id" position="after">
        <field name="currency_id" />
      </field>
    </field>
  </record>
  <record id="pos_payment_tree_view" model="ir.ui.view">
    <field name="name">pos.payment.tree.inherit</field>
    <field name="model">pos.payment</field>
    <field name="inherit_id" ref="point_of_sale.view_pos_payment_tree" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='payment_method_id']" position="after">
        <field name="payment_method_currency_id" />
        <field name="converted_amount"  widget="monetary" options="{'currency_field': 'payment_method_currency_id'}" sum="Total"/>
        <!-- <field name="total_converted_amount"/> -->
      </xpath>
    </field>
  </record>

  <record id="pos_payment_form_view" model="ir.ui.view">
    <field name="name">pos.payment.form.inherit</field>
    <field name="model">pos.payment</field>
    <field name="inherit_id" ref="point_of_sale.view_pos_payment_form" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='payment_method_id']" position="after">
        <!-- <field name="reference" readonly="1"/> -->
         <field name="payment_method_currency_id"/>
        
        <field name="converted_amount" readonly="1"  widget="monetary" options="{'currency_field': 'payment_method_currency_id'}"/>
      </xpath>
    </field>
  </record>

</odoo>
