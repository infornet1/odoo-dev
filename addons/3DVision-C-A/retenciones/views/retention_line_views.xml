<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="action_retention_line" model="ir.actions.act_window">
    <field name="name">Líneas de Retención</field>
    <field name="res_model">retention.line</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        No se han creado líneas de retención aún
      </p>
    </field>
  </record>

  <record id="retention_line_view_tree" model="ir.ui.view">
    <field name="name">retention.line.view.tree</field>
    <field name="model">retention.line</field>
    <field name="arch" type="xml">
      <tree>
        <field name="retention_id"/>
        <field name="invoice_id"/>
        <field name="partner_id"/>
        <field name="type" widget="badge" decoration-success="type == 'iva'" decoration-warning="type == 'iae'" decoration-danger="type == 'islr'"/>
        <field name="partner_type" widget="badge"/>
        <field name="amount_detained" sum="Total Retenido"/>
        <field name="state" widget="badge" decoration-success="state == 'posted'" decoration-info="state == 'draft'"/>
      </tree>
    </field>
  </record>

  <record id="retention_line_view_search" model="ir.ui.view">
    <field name="name">retention.line.view.search</field>
    <field name="model">retention.line</field>
    <field name="arch" type="xml">
      <search>
        <field name="retention_id"/>
        <field name="invoice_id"/>
        <field name="partner_id"/>
        <field name="type"/>
        <field name="partner_type"/>
        <separator/>
        <filter name="type_iva" string="IVA" domain="[('type', '=', 'iva')]"/>
        <filter name="type_islr" string="ISLR" domain="[('type', '=', 'islr')]"/>
        <filter name="type_iae" string="IAE" domain="[('type', '=', 'iae')]"/>
        <separator/>
        <filter name="partner_type_customer" string="Clientes" domain="[('partner_type', '=', 'customer')]"/>
        <filter name="partner_type_vendor" string="Proveedores" domain="[('partner_type', '=', 'vendor')]"/>
        <group expand="0" string="Agrupar Por">
          <filter name="group_by_retention" string="Retención" context="{'group_by': 'retention_id'}"/>
          <filter name="group_by_partner" string="Empresa" context="{'group_by': 'partner_id'}"/>
          <filter name="group_by_type" string="Tipo" context="{'group_by': 'type'}"/>
          <filter name="group_by_partner_type" string="Tipo de Retención" context="{'group_by': 'partner_type'}"/>
        </group>
      </search>
    </field>
  </record>

  <record id="retention_line_view_form" model="ir.ui.view">
    <field name="name">retention.line.view.form</field>
    <field name="model">retention.line</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <field name="existing_invoice_ids" invisible="1"/>
          <field name="partner_type" invisible="1"/>
          <field name="type" invisible="1"/>
          <field name="state" invisible="1"/>
          
          <group>
            <group>
              <field name="company_id"/>
              <field name="partner_id"/>
              <field name="invoice_id" options="{'no_create': True}"/>
              <field name="move_id" readonly="1"/>
              <field name="credit_note_ids" widget="many2many_tags" readonly="1"/>
            </group>
            <group>
              <field name="ret_tax_id"/>
              <field name="invoice_ref"/>
              <field name="control_number"/>
              <field name="registry_type" invisible="type != 'iva'" required="type == 'iva'"/>
              <field name="iae_type" invisible="type != 'iae'" required="type == 'iae'"/>
            </group>
          </group>
          <group string="Montos">
            <group>
              <field name="amount_base" widget="monetary"/>
              <field name="amount_untaxed" widget="monetary"/>
              <field name="amount_tax" widget="monetary"/>
            </group>
            <group>
              <field name="amount_total" widget="monetary"/>
              <field name="amount_subtracting" widget="monetary"/>
              <field name="amount_detained" widget="monetary" attrs="{'readonly': [('state','!=','draft')]}"/>
              <field name="amount_detained_manual" invisible="1"/>
              <field name="currency_id" invisible="1"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>