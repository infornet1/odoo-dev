<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_out_invoice_tree_inherit_retention" model="ir.ui.view">
    <field name="name">account.move.out.invoice.tree.inherit.retention</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_out_invoice_tree"/>
    <field name="arch" type="xml">
      <field name="amount_total_signed" position="after">
        <field name="iva_retention" optional="show"/>
        <field name="islr_retention" optional="show"/>
        <field name="iae_retention" optional="show"/>
        <field name="total_detained" optional="show"/>
      </field>
    </field>
  </record>
  
  <!-- Vista para facturas de cliente -->
  <record id="account_move_out_view" model="ir.ui.view">
    <field name="name">account.move.out.view.retention</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form" />
    <field name="arch" type="xml">
      <xpath expr="//header" position="inside">
        <button string="Crear Retenciones" name="create_retentions" type="object" class="oe_highlight" invisible="move_type not in ('out_invoice', 'out_refund') or state != 'posted'" />
        <button string="Generar Retención Teórica" name="action_generate_retention_report" type="object" class="oe_highlight" invisible="not is_active_theoretical or move_type not in ('out_invoice', 'out_refund')" />
      </xpath>
      <xpath expr="//div[@name='button_box']" position="inside">
        <button name="button_open_retention" type="object" class="oe_stat_button" icon="fa-list-alt" invisible="move_type not in ('out_invoice', 'out_refund') or not counted_retentions">
          <field name="counted_retentions" widget="statinfo" string="Retenciones"/>
        </button>
      </xpath>
      <xpath expr="//notebook" position="inside">
        <page string="Retenciones" name="retentions" invisible="move_type not in ('out_invoice', 'out_refund')"> 
          <group name="retention_info_group" string="Retenciones">
            <label string="Retención de IVA" for="iva_retention_tax_id" />
            <div class="row">
              <field class="col-auto oe_inline" name="iva_retention_tax_id" options="{'no_create': True}" readonly="counted_retentions > 0"/> 
              <field class="col-auto oe_inline" name="iva_retention" />
            </div>
            <label string="Retención de ISLR" for="islr_retention_tax_id" />
            <div class="row">
              <field class="col-auto oe_inline" name="islr_retention_tax_id" options="{'no_create': True}" readonly="counted_retentions > 0" />
              <field class="col-auto oe_inline" name="islr_retention" />
            </div>
            <label string="Retención de IAE" for="iae_retention_tax_id" />
            <div class="row">
              <field class="col-auto oe_inline" name="iae_retention_tax_id" options="{'no_create': True}" readonly="counted_retentions > 0" />
              <field class="col-auto oe_inline" name="iae_retention" />
            </div>
            <field name="iae_type" />
            <field name="retention_currency_id" invisible="1" />
            <field name="is_active_theoretical" invisible="1"/>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo> 