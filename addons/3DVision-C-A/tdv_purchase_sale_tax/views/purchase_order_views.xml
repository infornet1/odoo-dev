<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_purchase_order_form" model="ir.ui.view">
    <field name="name">purchase_order_form_inherit</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='currency_id']" position="after">
        <field name="enable_purchase_tax" invisible="1"/>
        <field name="purchase_tax_ids" widget="many2many_tags" 
                readonly="state=='purchase'" invisible="not enable_purchase_tax"/>
        
      </xpath>
      
    </field>
  </record>

  <record id="view_sale_order_form" model="ir.ui.view">
    <field name="name">sale_order_form_inherit</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='sale_order_template_id']" position="after">
        <field name="enable_sale_tax" invisible="1"/>
        <field name="sale_tax_id" widget="many2many_tags" invisible="not enable_sale_tax" readonly="state == 'sale'"/>
      </xpath>
    </field>
  </record>

</odoo>
<!-- domain="[('type_tax_use', '=', 'purchase')]" -->