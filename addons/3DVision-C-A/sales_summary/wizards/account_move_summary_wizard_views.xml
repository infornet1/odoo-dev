<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_account_move_summary_wizard" model="ir.ui.view">
        <field name="name">Account Move Summary Wizard</field>
        <field name="model">account.move.summary.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <label for="date_from" string="Date"/>
                        <div class="o_row">
                            <field name="date_from" widget="daterange" options="{'related_end_date': 'date_to'}"/>
                            <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                            <field name="date_to" widget="daterange" options="{'related_start_date': 'date_from'}"/>
                        </div>
                        <field name="has_invoices" widget="radio" options="{'horizontal': True}"/>
                        <field name="has_payments" widget="radio" options="{'horizontal': True}"/>
                        <field name="has_journals" widget="radio" options="{'horizontal': True}"/>
                    </group>
                </group>
                <footer>
                    <button string="Imprimir" class="btn-primary" name="generate_report" type="object"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
