<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="pos_payment_method_form_view" model="ir.ui.view">
    <field name="name">pos.payment.method.form.inherit</field>
    <field name="model">pos.payment.method</field>
    <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='company_id']" position="after">
        <field name="is_ref_payment" />
      </xpath>
    </field>
  </record>

  <record id="pos_payment_method_tree_view" model="ir.ui.view">
    <field name="name">pos.payment.method.tree.inherit</field>
    <field name="model">pos.payment.method</field>
    <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_tree" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='company_id']" position="after">
        <field name="is_ref_payment" widget="boolean_toggle"/>
      </xpath>
    </field>
  </record>

  <record id="pos_payment_tree_view" model="ir.ui.view">
    <field name="name">pos.payment.tree.inherit</field>
    <field name="model">pos.payment</field>
    <field name="inherit_id" ref="point_of_sale.view_pos_payment_tree" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='payment_method_id']" position="after">
        <field name="reference" />
      </xpath>
    </field>
  </record>

  <record id="pos_payment_form_view" model="ir.ui.view">
    <field name="name">pos.payment.form.inherit</field>
    <field name="model">pos.payment</field>
    <field name="inherit_id" ref="point_of_sale.view_pos_payment_form" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='payment_method_id']" position="after">
        <field name="reference" readonly="1" />
      </xpath>
    </field>
  </record>

