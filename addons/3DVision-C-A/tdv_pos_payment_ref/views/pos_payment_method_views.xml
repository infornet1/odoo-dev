    <field name="inherit_id" ref="point_of_sale.view_pos_pos_form" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='payment_ids']" position="inside">
        <field name="reference"/>
      </xpath>
    </field>
  </record> -->
  

</odoo>
