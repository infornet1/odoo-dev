<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="action_hr_payslip_other_inputs_view" model="ir.actions.act_window">
    <field name="name">Other Inputs</field>
    <field name="res_model">hr.payslip.input</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{'search_default_state_waiting': 1}</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            No inputs have been created yet
        </p>
    </field>
</record>

<record id="hr_payslip_input_view_tree" model="ir.ui.view">
    <field name="name">hr.payslip.input.view.tree</field>
    <field name="model">hr.payslip.input</field>
    <field name="arch" type="xml">
        <tree string="Other Inputs" editable="bottom">
            <field name="name"/>
            <field name="employee_id"/>
            <field name="payslip_id"/>
            <field name="payslip_run_id"/>
            <field name="input_type_id"/>
            <field name="code"/>
            <field name="amount"/>
            <field name="state"/>
            <field name="contract_id"/>
            <field name="_allowed_input_type_ids" optional="hide"/>
        </tree>
    </field>
</record>

<record id="hr_payslip_input_view_search" model="ir.ui.view">
    <field name="name">hr.payslip.input.view.search</field>
    <field name="model">hr.payslip.input</field>
    <field name="arch" type="xml">
        <search string="Search Inputs">
            <field name="name" />
            <field name="employee_id" />
            <field name="payslip_run_id"/>
            <field name="code"/>
            <field name="state"/>
            <field name="contract_id"/>
            <filter name="state_done" string="Done" domain="[('state', '=', 'done')]"/>
            <filter name="state_waiting" string="Waiting" domain="[('state', '=', 'waiting')]"/>
            <filter name="state_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
            <separator/>
            <group string="Group By">
                <filter name="group_by_employee_id" string="Employee" context="{'group_by': 'employee_id'}" />
                <filter name="group_by_payslip_run_id" string="Batch" context="{'group_by': 'payslip_run_id'}" />
                <filter name="group_by_payslip_id" string="Payslip" context="{'group_by': 'payslip_id'}" />
                <filter name="group_by_state" string="State" context="{'group_by': 'state'}" />
                <filter name="group_by_code" string="Code" context="{'group_by': 'code'}" />
                <filter name="group_by_contract_id" string="Contract" context="{'group_by': 'contract_id'}" />
            </group>
        </search>
    </field>
</record>

<menuitem
    id="menu_hr_payslip_other_inputs"
    name="Other Inputs"
    action="action_hr_payslip_other_inputs_view"
    parent="hr_payroll.menu_hr_payroll_payslips"
    sequence="10"/>

</odoo>
