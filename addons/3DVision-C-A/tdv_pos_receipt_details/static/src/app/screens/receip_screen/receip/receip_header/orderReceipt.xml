<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.ReceiptHeader"
       t-inherit-mode="extension">
       <xpath expr="//div[hasclass('cashier')]" position="after">
         
        <t t-if="props.data.partner">
            <t t-if="props.data.partner.name">
                <div>
                    <b>Name:</b>
                    <t t-esc="props.data.partner.name"/>
                </div>
            </t>   
            <t t-if="props.data.partner.street">
                <div>
                    <b>Address:</b>
                    <t t-esc="props.data.partner.street"/>
                </div>
            </t>
            <t t-if="props.data.partner.phone">
                <div>
                    <b>Phone:</b>
                    <t t-esc="props.data.partner.phone"/>
                </div>

            </t>
            <t t-if="props.data.partner.email">
                <div>
                    <b>Email:</b>
                    <t t-esc="props.data.partner.email"/>
                </div>

            </t>
            <t t-if="props.data.partner.vat">
                <div>
                    <b>Vat:</b>
                    <t t-esc="props.data.partner.vat"/>
                </div>

            </t>
           </t> 
