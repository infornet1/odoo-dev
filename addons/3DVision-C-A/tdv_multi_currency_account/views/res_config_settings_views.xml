<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="res_config_settings_view_form_inherit_tdv_multi_currency_account" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="account.res_config_settings_view_form" />
    <field name="arch" type="xml">
      <xpath expr="//block[@name='main_currency_setting_container']" position="inside">
  
      <!-- <div class="row mt16 mb16">
          <label for="second_currency_id" class="col-lg-3 o_light_label" />
          <field name="second_currency_id" options="{'no_create': True, 'no_open': True}" context="{'active_test': False}" />
        </div> -->
      <!-- <div class="row mt32">
          <label for="fixed_ref" string="Fixed Currency" class="col-lg-3 o_light_label" />
          <field name="fixed_ref" />
        </div>
        <div class="row mt32">
          <label for="product_cost_updatable" string="Update Cost?" class="col-lg-3 o_light_label" />
          <field name="product_cost_updatable" />
        </div> -->

         <setting id="show_second_currency_rate" help="Mostrar la tasa de cambio en Invoice">
          <field name="show_second_currency_rate"/>
        </setting>

        <setting id="main_currency" string="Second Currency" company_dependent="1" help="Second currency of your company">
          <div class="content-group">
            <div class="row mt16">
              <label for="second_currency_id" class="col-lg-4 o_light_label"/>
              <field name="second_currency_id" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
              <field name="group_multi_currency" invisible="1"/>
            </div>
            <div class="mt8">
              <button type="action" name="66" string="Second Currencies" class="btn-link" icon="oi-arrow-right"/>
            </div>
          </div>
        </setting>
        <setting id="settings_second_currency" groups="base.group_no_one" 
        string="Second Currency Options" 
        help="Opciones para definir las políticas de la compañía con respecto a la segunda moneda">
          <div class="mt16">
            <div class="content-group">
              <div>
                <field name="fixed_ref"/>
                <label for="fixed_ref" string="Fixed Currency"/>
                <span class="fa fa-lg fa-info" title="Sets the second currency to update the prices of the principal according to the established exchange rate."/>
              </div>

              <div>
                <field name="product_cost_updatable"/>
                <label for="product_cost_updatable"  string="Actualización de costo de producto"/>
                <span class="fa fa-lg fa-info" title="Update your costs by updating your inventory prices"/>
              </div>
            </div>
          </div>
        </setting>
      
      </xpath>
<!-- 
      <xpath expr="//setting[@id='update_exchange_rates']" position="before">
       

      </xpath> -->
    </field>
  </record>

</odoo>