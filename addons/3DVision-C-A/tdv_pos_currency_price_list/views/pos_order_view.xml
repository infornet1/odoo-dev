<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de formulario para pos.order -->
        <record id="pos_order_form_inherit_currency_price_list" model="ir.ui.view">
            <field name="name">pos.order.form.inherit.currency.price.list</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group" position="inside">
                    <group string="Currency Control" name="currency_control">
                        <field name="is_refund" readonly="1"/>
                    </group>
                </xpath>
            </field>
        </record>
        
        <!-- Vista de lista para pos.order -->
        <record id="pos_order_tree_inherit_currency_price_list" model="ir.ui.view">
            <field name="name">pos.order.tree.inherit.currency.price.list</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <field name="is_refund" optional="hide"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
