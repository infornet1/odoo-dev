<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="action_tdv_purchase_report" model="ir.actions.act_window">
    <field name="name">Purchase Report</field>
    <field name="res_model">tdv.purchase.report</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        No create Reports
      </p>
    </field>
  </record>

  <record id="tdv_purchase_report_view_tree" model="ir.ui.view">
    <field name="name">tdv.purchase.report.view.tree</field>
    <field name="model">tdv.purchase.report</field>
    <field name="arch" type="xml">
      <tree string="Purchase Report">
        <field name="name"/>
        <field name="date_from" optional="show"/>
        <field name="date_to" optional="show"/>
        <field name="company_id" optional="hide"/>
        <field name="currency_id" optional="hide"/>
        <field name="amount_untaxed" optional="show"/>
        <field name="amount_exempt" optional="show"/>
        <field name="amount_tax" optional="show"/>
        <field name="amount_total" optional="show"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <record id="tdv_purchase_report_view_form" model="ir.ui.view">
    <field name="name">tdv.purchase.report.view.form</field>
    <field name="model">tdv.purchase.report</field>
    <field name="arch" type="xml">
      <form string="Purchase Report">
        <header>
          <button string="Generate Report" name="generate" type="object" class="oe_highlight" invisible="state != 'draft'"/>
          <button string="Cancel" name="action_cancel" type="object" class="btn btn-danger" invisible="state != 'registered'"/>
          <field name="state" widget="statusbar" statusbar_visible="draft,registered,cancelled"/>
        </header>
        <sheet>
          <group>
            <group>
              <field name="name" readonly="state != 'draft'"/>
              <label for="date_from" string="Date" />
              <div class="o_row">
                <field name="date_from" widget="daterange" options="{'related_end_date': 'date_to'}" readonly="state != 'draft'"/>
                <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow" />
                <field name="date_to" widget="daterange" options="{'related_start_date': 'date_from'}" readonly="state != 'draft'"/>
              </div>
              <field name="purchase_type" widget="radio" options="{'horizontal': true}" readonly="state != 'draft'"/>
            </group>
            <group>
              <field name="company_id" options="{'no_create': True, 'no_open': True}" readonly="state != 'draft'"/>
              <field name="currency_id" options="{'no_create': True, 'no_open': True}" readonly="state != 'draft'"/>
              <field name="amount_untaxed" readonly="1"/>
              <field name="amount_exempt" readonly="1"/>
              <field name="amount_tax" readonly="1"/>
              <field name="amount_total" readonly="1"/>
              <field name="show_nro_plan_import"/>
              <field name="show_nro_exp"/>
            </group>
          </group>
          <notebook>
            <page name="line_page" string="Invoice Lines">
              <field name="line_ids" readonly="state != 'draft'">
                <tree editable="bottom">
                  <field name="invoice_id" />
                  <!-- <field name="retention_id" optional="hide"/> -->
                  <field name="invoice_date" />
                  <field name="company_id" optional="hide" />
                  <field name="partner_id" />
                  <field name="import_plan_number" optional="show" string="Import Plan Number"/>
                  <field name="file_number" optional="show" string="File Number"/>
                  <field name="invoice_reference" />
                  <field name="control_number" />
                  <field name="invoice_type" />
                  <!-- <field name="retention_correlative" />
                  <field name="retention_date" /> -->
                  <field name="amount_untaxed" />
                  <field name="amount_exempt" />
                  <field name="amount_tax" />
                  <field name="amount_total" />
                  <!-- <field name="amount_detained" /> -->
                  <!-- <field name="tax_aliquot" /> -->
                  <!-- <field name="retention_tax" /> -->
                  <field name="currency_id" optional="hide" />
                  <!-- Invisible Fields -->
                  <field name="date_from" column_invisible="True" />
                  <field name="date_to" column_invisible="True" />
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="tdv_purchase_report_line_form" model="ir.ui.view">
    <field name="name">tdv.purchase.report.line.form</field>
    <field name="model">tdv.purchase.report.line</field>
    <field name="arch" type="xml">
        <form string="Purchase Report Line">
            <group>
                <field name="purchase_report_id"/>
                <field name="invoice_id"/>
                <field name="company_id"/>
                <field name="currency_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="partner_id"/>
                <field name="invoice_reference"/>
                <field name="control_number"/>
                <!-- <field name="reversal_move_reference"/> -->
                <field name="invoice_date"/>
                <field name="invoice_type"/>
                <field name="amount_untaxed"/>
                <field name="amount_tax"/>
                <field name="amount_exempt"/>
                <field name="amount_total"/>
                <field name="import_plan_number"/>
                <field name="file_number"/>
            </group>
        </form>
    </field>
</record>


</odoo>